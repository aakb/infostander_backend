{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    <!-- Custom styles for this template -->
    <link href="/css/signin.css" rel="stylesheet">
{% endblock %}


{% block fos_user_content %}
<div class="container">
    {% if error %}
        <div>{{ error|trans }}</div>
    {% endif %}

    <form class="form-signin" role="form" action="{{ path("fos_user_security_check") }}" method="post">
        <h2 class="form-signin-heading">{{ 'security.login.submit'|trans }}</h2>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <input class="form-control" placeholder="{{ 'security.login.username'|trans }}" autofocus required type="text" id="username" name="_username" value="{{ last_username }}"/>

        <input class="form-control" placeholder="{{ 'security.login.password'|trans }}" type="password" id="password" name="_password" />

        <label class="checkbox" for="remember_me">
            {{ 'security.login.remember_me'|trans }}
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        </label>

        <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </form>
</div>
{% endblock fos_user_content %}

