{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-signin fos_user_registration_register">
        <h2 class="form-signin-heading">{{ 'registration.submit'|trans }}</h2>
        {#{{ form_widget(form) }}#}

        {{ form_errors(form) }}
        {{ form_errors(form.username) }}
        {{ form_errors(form.email) }}
        {{ form_errors(form.plainPassword.first) }}

        {{ form_widget(form.username) }}
        {{ form_widget(form.email) }}
        {{ form_widget(form.plainPassword.first) }}
        {{ form_widget(form.plainPassword.second) }}

        {{ form_rest(form) }}

        <div>
            <input class="btn btn-lg btn-primary btn-block" type="submit" value="{{ 'registration.submit'|trans }}" />
        </div>
    </form>
</div>
